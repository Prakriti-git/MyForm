@model Form.Models.Login
@{
    ViewData["Title"] = "Login";
}
<h1>@ViewData["Title"]</h1>

<p> </p>

<div class="container">
    <div class=" row">
        <div class="col-md-6">
            @{
                if
                (ViewBag.Message != null)
                {
                    <p class="text-danger"> 
                    @ViewBag.Message
                    </p>
                }
            }
            <form method="post" action="Login">

                <div class="form-floating mb-3">
                    <input type="email" asp-for="StudentEmail" class="form-control" id="floatingInput" placeholder="name@example.com">
                    <label for="floatingInput">Email address</label>
                    <span asp-validation-for="StudentEmail" class="text-danger">  </span>
                </div>
                <div class="form-floating">
                    <input type="password" asp-for="StudentPassword" class="form-control" id="floatingPassword" placeholder="Password">
                    <label for="floatingPassword">Password</label>
                    <span asp-validation-for="StudentPassword" class="text-danger">  </span>

                </div>

                <button type="submit" class="btn btn-primary">Login</button>
                <div>
                    <a asp-action="Register" class="text-decoration-none">Don't have an account? Go to register.</a>
                </div>
           
            </form>
        </div>

        <div class="col-md-6">
            <h3>Suppose it is  an image</h3>
        </div>
    </div>
</div>



